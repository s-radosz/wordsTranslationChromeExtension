{
    "manifest_version": 2,

    "name": "Word translation saver",
    "description": "Mark words in websites content to learn them later",
    "version": "1.0",
    "author": "Szymon Radosz - tech-bulb.com",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Word translation saver"
    },
    "permissions": [
        "contextMenus", 
        "tabs",
        "storage",
        "http://127.0.0.1:8000/",
        "http://127.0.0.1:8000/api/login"
    ],
    "background": {
        "scripts": ["background.js"]
    }
}